{
    "name": "spiral/app-cli",
    "type": "project",
    "license": "MIT",
    "description": "Spiral Skeleton Console Application",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/app-cli/issues",
        "source": "https://github.com/spiral/app-cli"
    },
    "authors": [
        {
            "name": "Wolfy-J",
            "email": "wolfy.jd@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "spiral/framework": "^3.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php app.php configure -vv"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.3.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
